<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:id="@+id/relative_layout_popup_main"
    >

    <Button
        android:id="@+id/btn_1_1"
        android:layout_width="75dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_pressed_west"
        android:textSize="0sp"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/btn_1_2"
        android:layout_width="75dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_pressed_east"
        android:textSize="0sp" />

    <Button
        android:id="@+id/btn_1_3"
        android:layout_width="15dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_pressed_north"
        android:layout_alignParentTop="true"
        android:textSize="0sp" />

    <Button
        android:id="@+id/btn_1_4"
        android:layout_width="15dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_pressed_south"
        android:textSize="0sp" />

    <Button
        android:id="@+id/btn_1_5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:background="@drawable/ic_moment" />

</RelativeLayout>